doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title Login Page
		link(rel="stylesheet" href="style.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
	body
		style.
			body{margin:0}
			.linkGrid {
				display:grid;
				grid-template-columns: repeat(3, 1fr);
				width: 100vw;
				height: 100vh;
				justify-items: center;
				align-content: space-evenly;
			}
			.linkGrid a {
				width:300px;
				border:4px solid black;
				color: black;
				text-decoration: none;
				cursor:pointer;
				font-family: monospace;
				font-size: 50px;
				height:200px;
				text-align: center;
				box-shadow: 3px 3px 5px 1px grey;
				transition: box-shadow 0.3s;
			}
			.linkGrid a:hover{
				box-shadow: 5px 5px 10px 5px grey;
			}
		.linkGrid
			a(href="loginScreen.html") Login Screen
			a(href="welcomeDashboard.html") Mini Dashboard
			a(href="roomWeek.html") Room Week View
			a(href="personWeek.html") Person Week View
			a(href="personSearchMenu.html") Persons Grid
			a(href="floor15.html") 15. OG
			a(href="login") 14. OG
			a(href="componentSandbox.html") Components Sandbox
			a(href="singlePage.html") SPA
